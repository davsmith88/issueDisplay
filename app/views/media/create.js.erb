<% if @type == 'DetailedStep' %>
	$('*[data-dt-id="<%= @context.id %>"]').html("<%= j (render partial: 'issues/step_table_row', locals: {workaround: @context}) %>");
<% end %>

<% if @type == 'Review' %>
	$('*[data-r-id="<%= @context.id %>"]').html("<%= j (render partial: 'issues/show_review_table_row', locals: {workaround: @context}) %>");
<% end %>
$('#myModal').modal('hide');
