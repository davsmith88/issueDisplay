<% content_for :second_level_layout do %>
<%= render template: "issues/show" %>
<div class='row'>
	<div class='col-sm-12'>
		<ul class="nav nav-tabs" role="tablist">
			  <li <%= @active_workarounds == true ? "class=active" : "" %>><%= link_to "Workarounds", show_workarounds_issue_path(@issue) %></li>
			  <li <%= @active_solutions == true ? "class=active" : "" %>><%= link_to "Solutions", show_solutions_issue_path(@issue) %></li>
			  <li <%= @active_att_sol == true ? "class=active" : "" %>><%= link_to "Attempted Solutions", show_att_sol_issue_path(@issue) %></li>
		</ul>
		<div class='container-fluid'>
			<div class='row'>
				<%= yield %>
			</div>
		</div>
	</div>
</div>
<% end %>

<%= render template: 'layouts/application' %>