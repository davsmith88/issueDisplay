
<% content_for :second_level_layout do %>
<%= render template: "issues/show" %>
	<div class='row'>
	<div class='col-sm-12'>
	<ul class="nav nav-tabs visible-xs">
	  <li <%= @active_workarounds == true ? "class=active" : "" %>><%= link_to("Workarounds", show_workarounds_issue_path(@issue)) %></li>
		  <li role="presentation" class="dropdown <%= @active_workarounds != true ? "active" : "" %>">
		    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
		      More <span class="caret"></span>
		    </a>
		    <ul class="dropdown-menu" role="menu">
		      <li><%= link_to("Solutions", show_solutions_issue_path(@issue)) %></li>
			  	<li><%= link_to("Steps", show_steps_issue_path(@issue)) %></li>
			  
		    </ul>
		  </li>
		</ul>		

		<ul class="nav nav-tabs hidden-xs" role="tablist" id="tab-list">
			  <li id='tab_workarounds' <%= @active_workarounds == true ? "class=active" : "" %>><%= link_to("Workarounds", show_workarounds_issue_path(@issue), remote: true, authenticity: true) %></li>
			  <li id='tab_solutions' <%= @active_solutions == true ? "class=active" : "" %>><%= link_to("Solutions", show_solutions_issue_path(@issue), remote: true, authenticity: true) %></li>
			  <li id='tab_step' <%= @active_steps == true ? "class=active" : "" %>><%= link_to("Steps", show_steps_issue_path(@issue), remote: true, authenticity: true) %></li>
			
			  
			 
		</ul>
		<div class='container-fluid'>
			<div class='row' id='tab-holder' >
				<%= yield %>
			</div>
		</div>
	</div>
</div>
<% end %>







<%= render template: 'layouts/application' %>