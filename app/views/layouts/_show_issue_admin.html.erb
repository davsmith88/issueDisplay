<% content_for :title do %>
	View Issue Management
<% end %>


<% content_for :breadcrumb do %>
	<li><%= link_to "Issue Management", issue_management_index_path %></li>
	<li><%= link_to @issue.id, issue_management_path(@issue.id) %></li>
	<li class='active'><%= link_to "View", issue_management_view_path(@issue.id) %></li>
<% end %>


<% content_for :third_level_layout do %>
	<%= render template: "issues/show" %>
	<div class='container-fluid'>
		<div class='row'>
			<div class='row'>
	<div class='col-sm-12'>
	<ul class="nav nav-tabs visible-xs">
	  <li <%= @active_workarounds == true ? "class=active" : "" %>><%= link_to("Workarounds",show_workarounds_issue_management_path(@issue)) %></li>
		  <li role="presentation" class="dropdown <%= @active_workarounds != true ? "active" : "" %>">
		    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
		      More <span class="caret"></span>
		    </a>
		    <ul class="dropdown-menu" role="menu">
		      <li><%= link_to("Solutions", show_solutions_issue_path(@issue)) %></li>
			  	<li><%= link_to("Steps", show_steps_issue_path(@issue)) %></li>
			  
		    </ul>
		  </li>
		</ul>
		<ul class="nav nav-tabs hidden-xs" role="tablist">
			  <li <%= @active_workarounds == true ? "class=active" : "" %>><%= link_to("Workarounds",show_workarounds_issue_management_path(@issue)) %></li>
			  <li <%= @active_solutions == true ? "class=active" : "" %>><%= link_to("Solutions", show_solutions_issue_management_path(@issue)) %></li>
			  <li <%= @active_steps == true ? "class=active" : "" %>><%= link_to("Steps", show_steps_issue_management_path(@issue)) %></li>
			
			  
			 
		</ul>
		<div class='container-fluid'>
			<div class='row'>
				<%= yield %>
			</div>
		</div>
	</div>
</div>
		</div>
	</div>
<% end %>


<%= render :template => 'layouts/admin_layout' %>