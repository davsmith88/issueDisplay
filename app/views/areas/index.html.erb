<ol class="breadcrumb">
  <li><a href="/admin">Admin</a></li>
  <li><%= link_to "Departments - Areas", admin_dep_areas_static_path %></li>
  <li><%= link_to "Areas", areas_path %></li>
  <li class='active'>View All</li>
</ol>

<h4>Areas</h4>

<table class='table'>
	<tr>
		<th>Area</th>
		<th>Description</th>
		<th>Actions</th>
	</tr>
		<% @areas.each do |area| %>
		<tr>
		<td><%= area.name %></td>
		<td><%= area.name %></td>
		<td>
			<div class='btn-group'>
				<%= link_to "Edit", edit_area_path(area), class: "btn btn-default" %>
				<%= link_to "Destroy", area_path(area), method: :delete, class: "btn btn-default" ,data: {confirm: "Are you sure you want to delete"} %>
			</div>
		</td>
		</tr>
	<% end %>
</table>


<%= link_to "Add an area", new_area_path, class: "btn btn-default" %>