<%= form_for [@issue, @detailed_step], remote: true, builder: MyFormBuilder, html: {class: "form-horizontal"} do |form|  %>
  <%= form.text_area :number %>
  <%= form.text_area :description %>

  <% if local_assigns[:place] == "update" %>
    <%= form.submit "Update", label: "Action", class: "btn btn-default" %>
  <% end %>
  <% if local_assigns[:place] == "new" %>
    <%= form.submit "Create", label: "Action", class: "btn btn-default" %>
  <% end %>
<% end %>
