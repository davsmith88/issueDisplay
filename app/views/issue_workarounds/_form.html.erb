<%if @issue_workaround.errors.any? %>
	<div id='error_explanation'>
		<h2><%= pluralize(@issue_workaround.errors.count, "error") %> prohibited this issue from being saved</h2>

		<ul>
			<% @issue_workaround.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
		</div>
<% end %>

<div class='form-group'>
	<%= form.label "Issue Name", class: "col-sm-4 control-label" %>
	<div class='col-sm-8'>
		<%= form.text_field :issue_name, class: "form-control", readonly: true, value: @issue_workaround.issue.name %>
	</div>
</div>

<div class='form-group'>
	<%= form.label :workaround, class: "col-sm-4 control-label" %>
	<div class='col-sm-8'>
		<%= form.text_field :description, class: "form-control" %>
	</div>
</div>

<div class='form-group'>
	<div class='col-sm-offset-4 col-sm-8'>
		<%= form.submit "Save Workaround" %>
	</div>
</div>


