<h1>Profile</h1>

<div class='container'>
<div class='row'>
	<div class='col-sm-2'><%= image_tag "no_image.jpg", class: "img-responsive" %></div>
	<div class='col-sm-10'>

		<div class='container-fluid'>
			<div class='row'>
				<div class="col-sm-2" >
				Name
				</div>
				<div class='col-sm-10'>
					<%= current_user.name %>
				</div>
			</div>
			<div class='row'>
				<div class="col-sm-2" >
					Title
				</div>
				<div class='col-sm-10'>
					<%= current_user.title %>
				</div>
			</div>
			<div class='row'>
				<div class="col-sm-2" >
					Email
				</div>
				<div class='col-sm-10'>
					<%= current_user.email %>
				</div>
			</div>
			<div class='row'>
				<div class="col-sm-2" >
					
				</div>
				<div class='col-sm-10'>
					<%= link_to "Edit", edit_user_path(current_user), class: "btn btn-default" %>
				</div>
			</div>
		</div>
	</div>
</div>
</div>

<h4>All the Issues that have been created by you</h4>

<ul class="nav nav-tabs" role="tablist">
	<li class="<%= is_active params[:filter], "all" %>">
		<%= link_to "All Issues", profile_path(:page => 1, :filter => 'all') %></li>
	<li class="<%= is_active params[:filter], "draft" %>"><%= link_to "Draft Issues", profile_path(:page => 1,:filter => 'draft') %></li>
	<li class="<%= is_active params[:filter], "review" %>"><%= link_to "Review Issues", profile_path(:page => 1,:filter => 'review') %></li>
	<li class="<%= is_active params[:filter], "publish" %>"><%= link_to "Publish Issues", profile_path(:page => 1,:filter => 'publish') %></li>
</ul>


	<div class="row">
		<% @issues.each do |issue| %>
		  <div class="col-sm-6 col-md-4">
		    <div class="thumbnail">
		    <% if issue.images.length > 0 %>
		      <img src="<%= issue.images[0].picture.url(:thumb) %>" alt="">
		     <% end %>
		      <div class="caption">
		        <span class="badge"><%= issue.state %></span> <strong><%= issue.name %></strong>

		        <ul class="list-group">
				  <li class="list-group-item"><%= " description to go here" %></li>
				  <li class="list-group-item">Created At : <%= format_date_time issue.created_at %></li>
				  <li class="list-group-item">Updated At : <%= format_date_time issue.updated_at %></li>
				  <li class='list-group-item'>
				  
				  	<span class='badge'><%= issue.notes.where(checked: false).length.to_s if issue.notes.where(checked: false).length > 0  %></span>
					<%= link_to "Notes", issue_notes_path(issue) %>
					</li>
					<li class='list-group-item'>
					
					<span class='badge'>
						<%= issue.versions.length.to_s if issue.versions.length > 0 %>
					</span>
					<%= link_to "History", history_issue_path(issue) %></li>
					<li class="list-group-item">
						<div class="btn-group">
						  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
						    Actions <span class="caret"></span>
						  </button>
						  <ul class="dropdown-menu" role="menu">
						   <li><%= link_to "View", issue_path(issue) %></li>
						    <li><%= link_to "Edit", edit_issue_path(issue) %></li>
						   	<li><%= link_to "Delete", issue_path(issue), method: :delete, data: {confirm: "Are you sure"} %></li>
						    <li class="divider"></li>
						    <li><%= link_to "View Notes", issue_notes_path(issue) %></li>
						    <li><%= link_to "View History", history_issue_path(issue) %></li>
						  </ul>
						</div>
					</li>
				</ul>

		      </div>
		    </div>
		  </div>

	<% end %>
	</div>






<%= will_paginate @issues %>