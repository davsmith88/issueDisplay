<% content_for :title do %>
	Business Management
<% end %>

<% content_for :breadcrumb do %>
	<li class='active'>Business Information</li>
<% end %>

<h3>Edit Business</h3>
<p>From this page change any information relating to the business</p>
<%= form_for @business, url: business_update_path(@business), method: :put, builder: MyFormBuilder, html: {multipart: true, class: "form-horizontal", role: "form"} do |form| %>
	<%= form.text_field :name, placeholder: "Business Name" %>
	<%= form.text_area :description, placeholder: "Description" %>
	<%= form.text_area :location, placeholder: "Location" %>
	<%= form.submit "Save", label: "Action", class: "btn btn-default" %>
<% end %>