<tr>
	<td><%= solution.description %></td>
	<td class='hidden-xs'>
		<table class='table'>
			<tr>
			</tr>
			<% solution.images.each do |image| %>
				<tr>
					<td>
						<%= image_tag image.picture.url(:thumb) %>
					</td>
					<td>
						<%= link_to "Edit", edit_solution_image_path(solution, image), class: "btn btn-default" if @image_edit %>
						<%= link_to "Delete", solution_image_path(solution, image), class: "btn btn-default", method: :delete, data: {confirm: "Are you sure you want to delete"} if @image_destroy %>
					</td>
				</tr>
			<% end %>
		</table>
	</td>
	<td>
		<%#= link_to "Add Image", new_solution_image_path(solution), class: "btn btn-default hidden-xs" if @image_create %>
		<% if @admin %>
			<%= link_to "Edit", edit_issue_management_solution_path(@issue, solution), class: "btn btn-default hidden-xs" if @solution_edit %>
			<%= link_to "Delete", issue_management_solution_path(@issue, solution), class: "btn btn-default hidden-xs", method: :delete, data: {confirm: "Are you sure you want to delete"} if @solution_destroy %>
		<% else %>
			<%= link_to "Edit", edit_issue_solution_path(@issue, solution), class: "btn btn-default hidden-xs" if @solution_edit %>
			<%= link_to "Delete", issue_solution_path(@issue, solution), class: "btn btn-default hidden-xs", method: :delete, data: {confirm: "Are you sure you want to delete"} if @solution_destroy %>
		<% end %>
		<div class="btn-group visible-xs">
		  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
		    Actions <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu" role="menu">
		    <li><%#= link_to "Add Image", new_solution_image_path(solution) if @image_create %></li>
		    <% if @admin %>
			    <li><%= link_to "Edit", edit_issue_management_solution_path(@issue, solution) if @solution_edit %></li>
			    <li class="divider"></li>
			    <li><%= link_to "Delete", issue_management_solution_path(@issue, solution), method: :delete, data: {confirm: "Are you sure you want to delete"} if @solution_destroy %></li>
		    <% else %>
			    <li><%= link_to "Edit", edit_issue_solution_path(@issue, solution) if @solution_edit %></li>
			    <li class="divider"></li>
			    <li><%= link_to "Delete", issue_solution_path(@issue, solution), method: :delete, data: {confirm: "Are you sure you want to delete"} if @solution_destroy %></li>
		    <% end %>
		  </ul>
		</div>
	</td>
</tr>