<tr>
	<td>
		<%= image_tag image.picture.url(:thumb) %>
	</td>
	<td class='hidden-xs'><%= image.caption %></td>
	<td>
		<%= link_to "Edit", edit_issue_image_path(@issue, image), class: "btn btn-default hidden-xs" if @image_edit %>
		<%= link_to "Delete", issue_image_path(@issue, image), class: "btn btn-default hidden-xs", method: :delete, data: {confirm: "Are you sure yo want to delete"} if @image_destroy %>
		<div class="btn-group visible-xs">
		  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
		    Actions <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu" role="menu">
		    <li><%= link_to "Edit", edit_issue_image_path(@issue, image) if @image_edit %></li>

		    <li class="divider"></li>
		    <li><%= link_to "Delete", issue_image_path(@issue, image), method: :delete, data: {confirm: "Are you sure yo want to delete"} if @image_destroy %></li>
		  </ul>
		</div>
	</td>
</tr>