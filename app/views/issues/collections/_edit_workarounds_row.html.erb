<tr>
	<td><%= workaround.description %></td>
	<td class='hidden-xs'>
		<table class='table'>
			<tr>

			</tr>
			<% workaround.images.each do |image| %>
				<tr><td class='hidden-xs'><%= image_tag image.picture.url(:thumb) %></td>
					<td>
						<%= link_to "edit", edit_issue_workaround_image_path(workaround, image), class: "btn btn-default" if @image_edit %>
						<%= link_to "Delete", issue_workaround_image_path(workaround, image), class: "btn btn-default", method: :delete, data: {confirm: "Are you sure yo want to delete"} if @image_destroy %>
					</td>
				</tr>
			<% end %>
		</table>
	</td>
	<td>
		<%= link_to "Add Image", new_issue_workaround_image_path(workaround), class: "btn btn-default hidden-xs" if @image_create %>
		<%= link_to "Edit", edit_issue_workaround_path(workaround), class: "btn btn-default hidden-xs" if @workaround_edit %>
		<%= link_to "Delete", issue_workaround_path(workaround),class: "btn btn-default hidden-xs", method: :delete, data: {confirm: "Are you sure you want to delete"} if @workaround_destroy %>
		<div class="btn-group visible-xs">
		  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
		    Actions <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu" role="menu">
		    <li><%= link_to "Add Image", new_issue_workaround_image_path(workaround) if @image_create %></li>
		    <li><%= link_to "Edit", edit_issue_workaround_path(workaround) if @workaround_edit %></li>
		    <li class="divider"></li>
		    <li><%= link_to "Delete", issue_workaround_path(workaround), method: :delete, data: {confirm: "Are you sure you want to delete"} if @workaround_destroy %></li>
		  </ul>
		</div>
	</td>
</tr>