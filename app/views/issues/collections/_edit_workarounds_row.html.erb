<tr>
	<td><%= workaround.description %></td>
	<td class='hidden-xs'>
		<%= image_tag workaround.medium.image.picture.url(:thumb) if workaround.medium %>
	</td>
	<td>
		<%#= link_to "Add Image", new_issue_workaround_image_path(workaround), class: "btn btn-default hidden-xs" if @image_create %>
		<% if @admin %>
			<%= link_to "Edit", edit_issue_management_issue_workaround_path(@issue, workaround), class: "btn btn-default hidden-xs" if @workaround_edit %>
			<%#= link_to "Add Image", new_issue_management_issue_workaround_image_path(@issue, workaround), class: "btn btn-default hidden-xs" %>
			<%= link_to "Delete", issue_management_issue_workaround_path(@issue, workaround),class: "btn btn-default hidden-xs", method: :delete, data: {confirm: "Are you sure you want to delete"} if @workaround_destroy %>
		<% else %>
			<%= link_to "Edit", edit_issue_issue_workaround_path(@issue, workaround), class: "btn btn-default hidden-xs" if @workaround_edit %>
			<%= link_to "Add Image", new_issue_issue_workaround_image_path(@issue, workaround), class: "btn btn-default hidden-xs" %>
			<%= link_to "Delete", issue_issue_workaround_path(@issue, workaround),class: "btn btn-default hidden-xs", method: :delete, data: {confirm: "Are you sure you want to delete"} if @workaround_destroy %>
		<% end %>
		<div class="btn-group visible-xs">
		  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
		    Actions <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu" role="menu">
		    <li><%#= link_to "Add Image", new_issue_issue_workaround_image(@issue,workaround) if @image_create %></li>
		    <% if @admin %>
		    	<li><%= link_to "Edit", edit_issue_management_issue_workaround_path(@issue,workaround) if @workaround_edit %></li>
		    	<li><%#= link_to "Add Image", new_issue_management_issue_workaround_image_path(@issue, workaround) %></li>
			    <li class="divider"></li>
			    <li><%= link_to "Delete", issue_management_issue_workaround_path(@issue, workaround), method: :delete, data: {confirm: "Are you sure you want to delete"} if @workaround_destroy %></li>
		    <% else %>
			    <li><%= link_to "Edit", edit_issue_issue_workaround_path(@issue,workaround) if @workaround_edit %></li>
			    <li><%= link_to "Add Image", new_issue_issue_workaround_image_path(@issue, workaround) %></li>
			    <li class="divider"></li>
			    <li><%= link_to "Delete", issue_issue_workaround_path(@issue, workaround), method: :delete, data: {confirm: "Are you sure you want to delete"} if @workaround_destroy %></li>
		    <% end %>
		  </ul>
		</div>
	</td>
</tr>