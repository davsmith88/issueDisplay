<tr>
	<td><%= att_sol.description %></td>
	<td class='hidden-xs'>
		<table class='table'>
			<tr>
			</tr>
			<% att_sol.images.each do |image| %>
				<tr>
					<td><%= image_tag image.picture.url(:thumb) %></td>
					<td><%= link_to "Delete Picture", attempted_solution_image_path(att_sol, image), class: "btn btn-default", method: :delete, data: {confirm: "Are you sure"} if @image_destroy %>
				</tr>
			<% end %>
		</table>
	</td>
	<td>
		<%= link_to "Add Image", new_attempted_solution_image_path(att_sol), class: "btn btn-default hidden-xs" if @image_create %>
		<%= link_to "Edit", edit_attempted_solution_path(att_sol), class: "btn btn-default hidden-xs" if @attempted_solution_edit %>
		<%= link_to "Delete", attempted_solution_path(att_sol), class: "btn btn-default hidden-xs", method: :delete, data: {confirm: "Are you sure?"} if @attempted_solution_destroy %>
		<div class="btn-group visible-xs">
		  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
		    Actions <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu" role="menu">
		    <li><%= link_to "Add Image", new_attempted_solution_image_path(att_sol) if @image_create %></li>
		    <li><%= link_to "Edit", edit_attempted_solution_path(att_sol) if @attempted_solution_edit %></li>
		    <li class="divider"></li>
		    <li><%= link_to "Delete", attempted_solution_path(att_sol), method: :delete, data: {confirm: "Are you sure?"} if @attempted_solution_destroy %></li>
		  </ul>
		</div>
	</td>
</tr>