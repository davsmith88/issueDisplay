<% content_for :title do %>
	Showing <%= @issue.name %>
<% end %>

<p id='notice'><%= notice %></p>

<div class='form-horizontal'>
	<div class='row'>
		<div class='col-sm-6'>
			<div class='form-group'>
				<label class='col-sm-3 control-label'>Name</label>
				<div class='col-sm-9'>
					<p class='form-control-static'><%= @issue.name %></p>
				</div>
			</div>
			<div class='form-group'>
				<label class='col-sm-3 control-label'>Description</label>
				<div class='col-sm-9'>
					<p class='form-control-static'><%= @issue.description %></p>
				</div>
			</div>
			<div class='form-group'>
				<label class='col-sm-3 control-label'>Type</label>
				<div class='col-sm-9'>
					<p class='form-control-static'><%= @issue.i_type %></p>
				</div>
			</div>
			<div class='form-group'>
				<label class='col-sm-3 control-label'>Area Impacted</label>
				<div class='col-sm-9'>
					<% if @issue.impact %>
						<p class='form-control-static'><%= @issue.impact.name %></p>
					<% else %>
						<p class='form-control-static'>"There is no impact area"</p>
					<% end %>
				</div>
			</div>
		</div>
		<div class='col-sm-6'>
			<!%= display_images(@issue.images) %>
			<%= raw(create_carousel @issue.images, "d") %>
		</div>
	</div>
	<div class='row'>
		<div class='col-sm-6'>
			<div class='form-group'>
				<label class='col-sm-3 control-label'>Department</label>
				<div class='col-sm-9'>
					<% if @issue.department_area != nil %>
						<p class='form-control-static'><%= @issue.department_area.name %></p>
					<% else %>
						<p class='form-control-static'>no department/area inserted yet</p>
					<% end %>
				</div>
			</div>
		</div>
		<div class='col-sm-6'>
			<div class='form-group'>
				<label class='col-sm-3 control-label'>Review Date</label>
				<div class='col-sm-9'>
					<p class='form-control-static'><%= format_date @issue.review_date %></p>
				</div>
			</div>
		</div>
	</div>

</div>
