<p id='notice'><%= notice %></p>



<div class='form-horizontal'>
	<div class='form-group'>
		<div class='col-sm-2'>
			<label class='control-label'>Name</label>
		</div>
		<div class='col-sm-10'>
			<div class='form-control'><%= @issue.name %></div>
		</div>
	</div>

	<div class='form-group'>
		<div class='col-sm-2'>
			<label class='control-label'>Description</label>
		</div>
		<div class='col-sm-10'>
			<div class='form-control'><%= @issue.description %></div>
		</div>
	</div>

	<div class='form-group'>
		<div class='col-sm-2'>
			<label class='control-label'>Author</label>
		</div>
		<div class='col-sm-10'>
			<div class='form-control'><%= @user.email %></div>
		</div>
	</div>

	<div class='form-group'>
		<div class='col-sm-2'>
			<label class='control-label'>Area Impacted</label>
		</div>
		<div class='col-sm-10'>
			<div class='form-control'>
				<% if @impact %>
					<%= @impact.name %>
				<% else %>
					"There is no impact area"
				<% end %>
			</div>
		</div>
	</div>

	<div class='form-group'>
		<div class='col-sm-2'>
			<label class='control-label'>State</label>
		</div>
		<div class='col-sm-10'>
			<div class='form-control'><%= @issue.state %></div>
		</div>
	</div>

	<div class='form-group'>
		<div class='col-sm-2'>
			<label class='control-label'>Type</label>
		</div>
		<div class='col-sm-10'>
			<div class='form-control'><%= @issue.i_type %></div>
		</div>
	</div>

	<div class='form-group'>
		<div class='col-sm-2'>
			<label class='control-label'>Department</label>
		</div>
		<div class='col-sm-10'>
			<div class='form-control'>
				<% if @issue.department_area != nil %>
					<%= @issue.department_area.name %>
				<% else %>
					no department/area inserted yet
				<% end %>
			</div>
		</div>
	</div>

	<div class='form-group'>
		<div class='col-sm-2'>
			<label class='control-label'>View</label>
		</div>
		<div class='col-sm-10'>
			<div class='form-control'></div>
		</div>
	</div>

	<div class='form-group'>
		<div class='col-sm-2'>
			<label class='control-label'>Review Date</label>
		</div>
		<div class='col-sm-10'>
			<div class='form-control'><%= format_date @issue.review_date %></div>
		</div>
	</div>
</div>

<ul id='tabAreas' class='nav nav-tabs'>
	<li class='active'><a href='#images' data-toggle="tab">Images</a></li>
	<li><a href='#workarounds' data-toggle="tab">Workarounds</a></li>
	<li><a href='#solutions' data-toggle="tab">Soutions</a></li>
	<li><a href='#attemptedSolutions' data-toggle="tab">Attempted Solutions</a></li>

	

</ul>


<div class="tab-content">

	<div class='tab-pane active' id='images'>
		<div class='row'>
	<div class='col-sm-3'>
			<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
			  <!-- Indicators -->
			  <ol class="carousel-indicators">
			  	<% @images.each_with_index do |image, index| %>
			  		<% if index == 0 %>
			  			<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
			  		<% else %>
			  			<li data-target="#carousel-example-generic" data-slide-to="<%= index %>"></li>
			  		<% end %>
			  	<% end %>
			  </ol>

			  <!-- Wrapper for slides -->
			  <div class="carousel-inner">

			  		

			  	<% @images.each_with_index do |image, index| %>
			  		<% if index == 0 %>
			  		<div class="item active">
				      <img src="<%= image.picture.url(:medium) %>" alt="...">
				      <div class="carousel-caption">
				        
				      </div>
				    </div>
			  		<% else %>
				    <div class="item">
				      <img src="<%= image.picture.url(:medium) %>" alt="...">
				      <div class="carousel-caption">
				        
				      </div>
				    </div>
				    <% end %>
			    <% end %>
			    
			  </div>

			  <!-- Controls -->
			  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
			    <span class="glyphicon glyphicon-chevron-left"></span>
			  </a>
			  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
			    <span class="glyphicon glyphicon-chevron-right"></span>
			  </a>
			</div>
		</div>
		<div class='col-sm-9'>
ds
		</div>
</div>


	</div>

  <div class="tab-pane" id="workarounds">
  	<span>Workarouds are used for issues where either their is no solution
	or the solutions dont work </span>
	<% if !@issue.issue_workarounds.empty? %>
		<table class='table table-bordered'>
			<tr>
				<th>Image</th>
				<th>Description</th>
				<th>Record</th>
			</tr>

			<%= display_sub_field(@issue_workarounds, "description", @issue) %>
		</table>
	<% else %>
		<span>No workarounds for the issue</span>
	<% end %>
  </div>
  <div class="tab-pane" id="solutions">
  	<% if !@solutions.empty? %>
		<table class='table table-bordered'>
			<tr>
				<th>Image</th>
				<th>Description</th>
				<th>Record</th>
			</tr>
			<%= display_sub_field(@solutions, "name", @issue) %>
		</table>
	<% else %>
		<span>No solutions added yet!</span>
	<% end %>
  </div>

  <div class='tab-pane' id='attemptedSolutions'>
  	<% if !@attempted_solutions.empty? %>
		<table class='table table-bordered'>
			<tr>
				<th>Image</th>
				<th>Description</th>
				<th>Record</th>
			</tr>
			<%= display_sub_field(@attempted_solutions, "name", @issue) %>
		</table>
	<% else %>
		<span>No attempted solutions added yet!</span>
	<% end %>
  </div>

</div>
<br>
<div class='row'>
	<div class="btn-group btn-group-justified">
	  	<%= link_to "Record Issue", new_issue_record_path(@issue), class: 'btn btn-default'  %>
		<%= link_to "Edit", edit_issue_path(@issue), class: 'btn btn-default' %>
		<%= link_to "View All Issues", issues_path, class: 'btn btn-default' %>
	</div>
</div>
