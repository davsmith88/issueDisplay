<% content_for :title do %>
	Showing <%= @issue.name %>
<% end %>

<div class='form-horizontal'>
	<div class='row'>
		<div class='col-sm-6'>
			<div class='form-group'>
				<p id='type'>a</p>
				<label class='col-sm-2 control-label'>Name</label>
				<div class='col-sm-10'>
					<p class='form-control-static'><%= @issue.name %></p>
				</div>
			</div>
			<div class='form-group'>
				<label class='col-sm-2 control-label'>Description</label>
				<div class='col-sm-10'>
					<p class='form-control-static'><%= @issue.description %></p>
				</div>
			</div>

			<div class='form-group'>
				<label class='col-sm-2 control-label'>Departments / Area</label>
				<div class='col-sm-10'>
					<p class='form-control-static'><%= @issue.department_area.name %></p>
				</div>
			</div>

			<div class='form-group'>
				<div class='col-sm-12'>
					<button id='showOther' type='button' class='btn btn-primary btn-sm visible-xs'>Show Other Fields</button>

				</div>
			</div>
			
			<div class='form-group hidden-xs show-hidden'>
				<label class='col-sm-2 control-label'>Type</label>
				<div class='col-sm-10'>
					<p class='form-control-static'><%= @issue.i_type %></p>
				</div>
			</div>
			
			<div class='form-group hidden-xs show-hidden'>
				<label class='col-sm-2 control-label'>Area Impacted</label>
				<div class='col-sm-10'>
					<% if @issue.impact %>
						<p class='form-control-static'><%= @issue.impact.name %></p>
					<% else %>
						<p class='form-control-static'>"There is no impact area"</p>
					<% end %>
				</div>
			</div>

			<div class='form-group hidden-xs show-hidden'>
				<label class='col-sm-2 control-label'>Review Date</label>
				<div class='col-sm-10'>
					<p class='form-control-static'><%= format_date @issue.review_date %></p>
				</div>
			</div>

			<div class='form-group hidden-xs show-hidden'>
				<label class='col-sm-2 control-label'>Picture</label>
				<div class='col-sm-10'>
					<%= image_tag @issue.picture.url(:medium) if @issue.picture %>
				</div>
			</div>
		
	</div>
	<div class='col-sm-6'>
		<%# if @issue.howTo == 'true' %>
			<div class='col-sm-6'>
				<h4>How to window</h4>
			</div>
			<div class='col-sm-6'>
				<% if can? :create, DetailedStep %>
					<%= link_to "Add How To", new_issue_detailed_step_path(@issue), class: "btn btn-default" %>
				<% end %>
			</div>
			<div class='col-sm-12'>
			<ul class="list-group">
			<% @steps.each do |step|  %>
				<li class='list-group-item'>
				<div class='row'>
					<div class='col-sm-1'><span class='label label-success'><%= step.number %></span></div>
					<div class='col-sm-5'><%= step.description %></div>
					<div class='col-sm-4'><%= image_tag step.medium.image.picture.url(:thumb) if step.medium %></div>
				</div>
				<div class='row'>
				<div class='col-sm-12'>
					<%= link_to "Edit", edit_issue_detailed_step_path(@issue, step), class: "btn btn-info btn-xs" %>
	<%= link_to "Destroy", issue_detailed_step_path(@issue, step), id: "destroy", class: "btn btn-info btn-xs", method: :delete, data: {confirm: "Are you sure you want to delete"} %>

		<%= link_to "Add Image", new_medium_path(type: 'DetailedStep', type_id: step.id, department_area_id: @issue.department_area), class: "add-image btn btn-default btn-xs", data: {step_id: step.id}, remote: true, authenticity: true %>
				</div>
				</div>



				
				</li>
			<% end %>
			</ul>
			</div>
		</div>
	<%# end %>
		
	

</div>
