<%if @image.errors.any? %>
	<div id='error_explanation'>
		<h2><%= pluralize(@image.errors.count, "error") %> prohibited this issue from being saved</h2>

		<ul>
			<% @image.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
		</div>
		<% end %>

		<h2>Add image</h2>
		<div class='form-group'>
			<%= form.label "Image Attached To", class: "col-sm-4 control-label" %>
			<div class='col-sm-8'>
				<%= form.text_field :image_attached, class: "form-control", readonly: true, value: @c.class.name %>
			</div>
		</div>
		<div class='form-group'>
			<%= form.label "#{@c.class.name} Name", class: "col-sm-4 control-label" %>
			<div class='col-sm-8'>
				<% if @c.try "name" %>
					<%= form.text_field :image_attached, class: "form-control", readonly: true, value: @c.name %>
				<% else %>
					<%= form.text_field :image_attached, class: "form-control", readonly: true, value: @c.description %>
				<% end %>
			</div>
		</div>
		<div class='form-group'>
			<%= form.label :picture, class: "col-sm-4 control-label" %>
			<div class='col-sm-8'>
				<%= form.file_field :picture, class: "form-control" %>
			</div>
		</div>
		<div class='form-group'>
			<%= form.label :caption, class: "col-sm-4 control-label" %>
			<div class='col-sm-8'>
				<%= form.text_field :caption, class: "form-control" %>
			</div>
		</div>
		<div class='form-group'>
			<div class='col-sm-offset-4 col-sm-8'>
				<%= form.submit "Save", class: "btn btn-default" %>
			</div>
		</div>

		