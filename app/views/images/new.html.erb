<%= form_for [@c, @image], :html => { :multipart => true, class: 'form-horizontal' } do |form| %>
	<%= render partial: form %>
<% end %>

<div class='row'>
	<div class="btn-group btn-group-justified">
		<%= link_to "Back", :back, class: "btn btn-default" %>
		<% if @c.class.name == "Issue" %>
			<%= link_to "Show Issue", @c, class: "btn btn-default" %>
			<%= link_to "Edit Issue", @c, class: "btn btn-default" %>
		<% else %>
			<%= link_to "Show Issue", @c.issue, class: "btn btn-default" %>
			<%= link_to "Edit Issue", @c.issue, class: "btn btn-default" %>
		<% end %>

		<%= link_to "View All Issues", issues_path, class: 'btn btn-default' %>
	</div>
</div>