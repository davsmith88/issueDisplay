<ol class="breadcrumb">
  <li><a href="/admin">Admin</a></li>
  <li><%= link_to "Issue Management", issue_management_index_path %></li>
  <li class='active'><%= @issue.name %></li>
</ol>

<h4>Showing the issue management more detail</h4>

<div class='form-horizontal'>
	<div class='form-group'>
		<label class='col-sm-2 control-label'>Name</label>
		<div class='col-sm-10'>
			<p class='form-control-static'><%= @issue.name %></p>
		</div>
	</div>
	<div class='form-group'>
		<label class='col-sm-2 control-label'>Review Date</label>
		<div class='col-sm-10'>
			<% if @issue.review_date %>
				<p class='form-control-static'>
				<% if @issue.review_date < Time.now %>
					was <%= distance_of_time_in_words @issue.review_date, Time.now %> ago Review Today!
				<% else %>
					In <%=  distance_of_time_in_words @issue.review_date, Time.now %>
				<% end %>
				</p>
			<% end %>
		</div>
	</div>
	<div class='form-group'>
		<label class='col-sm-2 control-label'>User</label>
		<div class='col-sm-10'>
			<% if @issue.user %>
				<p class='form-control-static'><%= @issue.user.name %></p>
			<% end %>
		</div>
	</div>
	<div class='form-group'>
		<label class='col-sm-2 control-label'>Publish State</label>
		<div class='col-sm-10 form-control-static'>
			<%= @issue.state %>
		</div>
	</div>
	<div class='form-group'>
		<label class='col-sm-2 control-label'>Options</label>
		<div class='col-sm-10'>
			<div class='btn-group btn-group-justified'>
				<%= link_to "History", history_issue_path(@issue), class: "btn btn-default"  %>
				<%= link_to "Show", issue_path(@issue), class: "btn btn-default " %>
				<%= link_to "Edit", edit_issue_path(@issue), class: "btn btn-default" %>
				<%= link_to "Delete", issue_path(@issue), method: :delete,class: "btn btn-default", data: {confirm: "Are you sure you want to Delete"} %>
			</div>
		</div>
	</div>
	<div class='form-group'>
		<label class='col-sm-2 control-label'>Publish Options</label>
		<div class='col-sm-10'>
			<% if @issue.draft? %>
					<%= link_to "Review", draft_to_review_issue_path(@issue), class: "btn btn-default" %>
				<% elsif @issue.review? %>
					<%= link_to "Draft", review_to_draft_issue_path(@issue), class: "btn btn-default" %>
					<%= link_to "Publish", review_to_publish_issue_path(@issue), class: "btn btn-default" %>
					<%= link_to "Add Note", new_issue_note_path(@issue), class: "btn btn-default"  %>

					<%= link_to "View All current notes", issue_notes_path(@issue), class: "btn btn-default" %>
				<% elsif issue.publish? %>
					<%= link_to "Draft", publish_to_draft_issue_path(@issue), class: "btn btn-default" %>
					<%= link_to "Review", publish_to_review_issue_path(@issue), class: "btn btn-default" %>
				<% end %>
		</div>
	</div>
	<div class='form-group'>
		<label class='col-sm-2 control-label'>Records</label>
		<div class='col-sm-10'>
			<ul>
				<% @issue.records.each do |record| %>
					<li><%= record.message %> | <%= record.updated_at %>

					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

