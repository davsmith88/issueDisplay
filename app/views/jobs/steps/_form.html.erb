<%= form.text_field :job_id, value: @job.id, readonly: "readonly" %>

<%= form.text_area :description, class: "form-control", placeholder: "Description" %>

<%= form.text_field :step_order, placeholder: "Step Order" %>

<% if @step.images[0] and @step.images[0].errors.messages.length > 0 %>
	<div class='form-group has-error'>
<% else %>
	<div class='form-group'>
<% end %>
	<label class='col-sm-2 control-label'>Picture</label>
	<div class='col-sm-10'>
		<input class='form-control' id='step_picture' name='step[picture]' type='file' capture='camera'>
		<% if @step.images[0] and @step.images[0].errors.messages.length > 0 %>
			<p class='text-danger'><%= @step.images[0].errors[:picture].to_sentence.capitalize %></p>
			<p>
		<% end %>
	</div>
</div>

<%= form.submit "Save", label: "Actions", class: 'btn btn-primary' %>