<% content_for :title do %>
	Department Areas
<% end %>

<% content_for :breadcrumb do %>
	<li class='active'>Department - Areas</li>
<% end %>

<p>
<div class='row'>
	<div class='col-xs-8 col-sm-8'>
		<p>The table below shows the areas that belong to departments. Aside from just showing that information, the user can also remove the area's from the departments</p>
	</div>
	<div class='col-xs-4 col-sm-4'>
		<%= link_to "Add another Area to a department", new_department_area_path, class: "wrap_button btn btn-default" %>
	</div>
</div>

<div class='row'>
	<div class='col-sm-12'>
		<table class='table'>
			<tr>
				<th>Department</th>
				<th>Area</th>
				<th class='hidden-xs'>Actions</th>
			</tr>
				<% @depAreas.each do |depArea|  %>
				<tr>
					<td><%= depArea.department.name %></td>
					<td>
						<%= depArea.area.name %>
						<div class='visible-xs'>
							<%= link_to "Destroy", department_area_path(depArea), class: "btn btn-default btn-xs", method: :delete, data: {confirm: "Are you sure you want to destroy??"} %>
						</div>
					</td>
					<td class='hidden-xs'>
						<%= link_to "Locations", department_area_locations_path(depArea), class: "btn btn-default btn-sm" %>
						<div class="btn-group">
						  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
						    Actions <span class="caret"></span>
						  </button>
						  <ul class="dropdown-menu" role="menu">
						  
						    <li><%= link_to "Destroy", department_area_path(depArea), method: :delete, data: {confirm: "Are you sure you want to destroy??"} %></li>
						  </ul>
						</div>
					</td>
				</tr>
				<% end %>
		</table>
	</div>
</div>

<div class='row'>
	<div class='col-sm-12'>
		<%= will_paginate @depAreas, renderer: BootstrapPagination::Rails %>
	</div>
</div>