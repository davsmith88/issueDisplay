<%= form_for [@c, @record], :html => {class: "form-horizontal", role: "form"} do |form| %>
	<h2>Record an issue</h2>

	<div class='form-group'>
		<%= form.label "Recording A Record For", class: "col-sm-2 control-label" %>
		<div class='col-sm-10'>
		<%= form.text_field "m", class: 'form-control', readonly: true, value: @c.class.name %>
		</div>
	</div>

	<div class='form-group'>
		<%= form.label "Id", class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= form.text_field "mm", class: "form-control", readonly: true, value: @c.id %>
		</div>
	</div>

	<div class='form-group'>
		<%= form.label :message, class: "col-sm-2 control-label" %>
		<div class='col-sm-10'>
			<%= form.text_area :message, class: "form-control" %>
		</div>
	</div>
	<div class='form-group'>
		<div class='col-sm-offset-2 col-sm-10'>
			<%= form.submit "Save", class: "btn btn-default" %>	
		</div>
	</div>
<% end %>